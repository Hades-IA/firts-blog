<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../../partials/head.ejs")%>
    <title>Criar Novo Categoria</title>
</head>

<body>
    <%- include("../../partials/navbar.ejs")%>


    <div class="container">
        <div class="card">
            <div class="card-header">
                <h1>Criar Novo Artigo</h1>
            </div>
            <div class="card-body mt-3">
                <form action="/article/save" method="post">
                    <input class="form-control mt-2" type="text" name="title" placeholder="Escreva o Titulo do Artigo">
                    <textarea id="article" class="form-control mt-1" name="body"
                        placeholder="Escreva o Artigo Aqui"></textarea>
                    <label> Categoria</label>
                    <select name="categories" class="form-control mt-1 mb-1 fit-content" id="">
                        <% category.forEach( (category) =>{ %>
                        <option value="<%= category.id %>"> <%= category.title%> </option>
                        <%}) %>
                    </select>
                    <button class="btn btn-success mt-3">Publicar</button>
                </form>
            </div>
        </div>


    </div>













    <%- include("../../partials/scripts.ejs")%>
    <%- include("../../partials/tiny.ejs")%>
    <%- include("../../partials/admin.ejs")%>

</body>

</html>